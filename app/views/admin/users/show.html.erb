<div class="content">
  <div class="title">
    <h2><i class="fas fa-user"></i> プロフィール</h2>
  </div>
  <div class="item-style">
    <%= link_to "プロフィールを編集する", edit_admin_user_path(@user.id), class: "btn btn-green" %>
    <%= render "public/users/profile-card", user: @user %>
      <table class="small-table" >
        <tr>
          <th>ステータス</th>
          <td><%= user_status(@user) %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @user.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @user.full_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @user.post_code_add_mark %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @user.address %></td>
        </tr>
      </table>
  </div>
  <div class="title">
    <h2><i class="fas fa-feather-alt"></i> <%= @user.account_name %>の投稿一覧</h2>
  </div>
  <div class="item-style user-articles-flex">
    <%= render "admin/articles/admin-article-card", articles: @articles %>
  </div>
</div>