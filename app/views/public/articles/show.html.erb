<div class="content">
  <%= attachment_image_tag @article, :article_image, fallback: "no_image.png"%>
  <%= @article.message %>
  <table class="table">
    <tbody>
      <tr>
        <th>品種名</th>
        <td><%= @article.cultivar_name %></td>
      </tr>
      <tr>
        <th>都道府県名</th>
        <td><%= @article.prefecture.name %></td>
      </tr>
      <tr>
        <th>市区町村名</th>
        <td><%= @article.municipality.municipality_name %></td>
      </tr>
      <tr>
        <th>難易度</th>
        <td><%= @article.level %></td>
      </tr>
      <tr>
        <th>時期</th>
        <td><%= @article.season %></td>
      </tr>
      <tr>
        <th>肥料の有無</th>
        <td><%= @article.fertilizer_existence %></td>
      </tr>      <tr>
        <th>肥料</th>
        <td><%= @article.fertilizer_info %></td>
      </tr>
      <tr>
        <th>場所</th>
        <td><%= @article.place %></td>
      </tr>
      <tr>
        <th>条件</th>
        <td><%= @article.condition %></td>
      </tr>
      <tr>
        <th>開始時</th>
        <td><%= @article.state_at_start %></td>
      </tr>
    </tbody>
  </table>

</div>
