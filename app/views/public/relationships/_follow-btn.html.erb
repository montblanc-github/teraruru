<div id="follow-btn">
    <% if current_user.following?(user) %>
        <%= link_to "フォロー解除", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-right btn-red" %>
    <% else %>
        <%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, class: "btn btn-right btn-blue" %>
    <% end %>
</div>
