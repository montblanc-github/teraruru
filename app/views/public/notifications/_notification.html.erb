<tr>
  <td><%= attachment_image_tag notification.visiter, :profile_image, fallback: "no_image.png", class: "profile_small_icon" %></td>
  <td>
    <%= notification_form(notification) %><%= "(#{time_ago_in_words(notification.created_at)}前)" %>
    <br>
    <% if !@comment.nil? %>
      <p class="notice-comment"><%= @comment.truncate(35) %></p>
    <% end %>
  </td>
  <td><%= link_to "削除", user_notification_path(current_user.id,notification.id), method: :delete, class: "btn btn-red notice-delete-btn" %></td>
</tr>
